@model SessionViewModel
@{
    ViewData["Title"] = "Delete Session";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-warning display-1"></i>
                    </div>

                    <h3 class="text-primary-color mb-3">Delete Session</h3>
                    <h5 class="mb-4">@Model.CategoryName</h5>

                    <div class="alert alert-warning text-start mb-4">
                        <strong><i class="bi bi-info-circle me-2"></i>Warning:</strong>
                        This action cannot be undone. All session data and bookings will be permanently deleted.
                    </div>

                    <div class="session-summary mb-4 p-3 bg-light rounded text-start">
                        <h6 class="text-primary-color mb-3">Session Details</h6>
                        <div class="row g-2">
                            <div class="col-6">
                                <small class="text-muted d-block">Trainer</small>
                                <strong>@Model.TrainerName</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Capacity</small>
                                <strong>@Model.Capacity spots</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Start</small>
                                <strong>@Model.StartDate.ToShortDateString()</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Duration</small>
                                <strong>@Model.Duration.TotalHours</strong>
                            </div>
                            <div class="col-12 mt-2">
                                <small class="text-muted d-block">Status</small>
                                <span class="badge bg-@(Model.Status == "Ongoing" ? "success" : Model.Status == "Upcoming" ? "primary" : "secondary")">
                                    @Model.Status
                                </span>
                            </div>
                        </div>
                    </div>

                    <p class="text-muted mb-4">Are you sure you want to delete this session?</p>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between gap-3">
                            <a asp-action="Index" class="btn btn-outline flex-fill">
                                <i class="bi bi-x-lg me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-fill bg-danger border-danger flex-fill">
                                <i class="bi bi-trash me-1"></i>Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>